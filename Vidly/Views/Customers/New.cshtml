                    <label>
                        @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter, new { @class = "control-label col-md-2" }) Subscribed to NewsLetter?
                    </label>
                </div>
            </div>
        </div>

        @Html.HiddenFor(m => m.Customer.Id)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
